<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrool"
    tools:context=".Extra"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@drawable/backgrnd_abt1"


        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="knowledge about miwok culture"
                android:textSize="20sp"

                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:background="#ADD8E6"
                android:id="@+id/button"
                />
        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#ADD8E6"

            >
            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Ask a Question by Mail   "
                android:textSize="18dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_weight="5"
                android:background="#ADD8E6"
                android:id="@+id/mail"
                />


            <ImageButton
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"

                android:src="@drawable/search_image"
                android:background="#ADD8E6"
                android:id="@+id/imgbtn"


                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/back_abt2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miwok Culture"
                android:gravity="center"
                android:textSize="40sp"
                android:padding="90dp"/>



        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read about the application"
            android:layout_marginLeft="0dp"
            android:textSize="30dp"
            android:textColor="#ff0000 "
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textStyle="italic"
            android:background="#ADD8E6"
            android:id="@+id/read_appp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#ADD8E6"
            >



            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:text="Please give your Feed Back"
                android:tooltipText="Click here"
                android:textStyle="italic"
                android:textSize="20dp"
                android:gravity="center"

                android:textColor="#070707"
                android:layout_weight="5"
                android:id="@+id/text_sign"
                android:background="#ADD8E6"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:src="@drawable/feedback"
                android:layout_weight="1"
                android:background="#ADD8E6"
                android:id="@+id/img_sign"
                />




        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/globe_button"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read more on internet"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="?android:attr/selectableItemBackground"


                />
        </FrameLayout>







    </LinearLayout></ScrollView>